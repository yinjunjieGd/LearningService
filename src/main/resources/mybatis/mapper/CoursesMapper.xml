<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaodun.learningservice.mapper.CoursesMapper">
    <resultMap id="BaseResultMap" type="com.gaodun.learningservice.Entity.CoursesEntity">
        <id column="course_id" jdbcType="INTEGER" property="id"/>
        <result column="teacher_id" jdbcType="INTEGER" property="teacherId"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <select id="selectById" parameterType="Integer" resultMap="BaseResultMap">
        SELECT *
        FROM courses
        WHERE course_id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT *
        FROM courses
    </select>

    <select id="selectByTeacherId" parameterType="Integer" resultMap="BaseResultMap">
        SELECT *
        FROM courses
        WHERE teacher_id = #{teacherId}
    </select>

    <insert id="insert" parameterType="com.gaodun.learningservice.Entity.CoursesEntity">
        INSERT INTO courses (teacher_id, title, description, create_time, update_time)
        VALUES (#{teacherId}, #{title}, #{description}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="com.gaodun.learningservice.Entity.CoursesEntity">
        UPDATE courses
        SET teacher_id = #{teacherId},
            title = #{title},
            description = #{description},
            update_time = NOW()
        WHERE course_id = #{id}
    </update>

    <delete id="delete" parameterType="Integer">
        DELETE FROM courses
        WHERE course_id = #{id}
    </delete>
</mapper>
